# Environment configuration
PORT=3000
# Max downloadable bytes (default 104857600 = 100MB)
MAX_BYTES=104857600
# Optional: allow only these hosts (comma-separated). If set, blocklist is ignored.
ALLOWED_HOSTS=sample-videos.com,filesamples.com
# Optional: block these hosts (comma-separated). Only applies if ALLOWED_HOSTS is empty.
BLOCKED_HOSTS=youtube.com,youtu.be,vimeo.com,facebook.com,instagram.com,tiktok.com,twitter.com,x.com,dailymotion.com,netflix.com,hulu.com,disneyplus.com,primevideo.com,twitch.tv
# Google Analytics (GA4)
GA_MEASUREMENT_ID=
# Google AdSense client ID (format: ca-pub-XXXXXXXXXXXXXXX)
ADSENSE_CLIENT_ID=

